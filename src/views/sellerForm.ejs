<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sustainability Form | ReCraft</title>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="icon" href="/images/recraft-logo.png" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
      <!-- Flash Messages -->
<%- include('partials/flash') %>

    <div class="container">
        <div class="form-header">
            <h1><i class="fas fa-leaf"></i> Sustainability Form</h1>
            <p>Help us measure your product's environmental impact</p>
        </div>

        <% if (success && success.length > 0) { %>
          <% success.forEach(function(msg) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <p><%= msg %></p>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }); %>
        <% } %>

        <% if (error && error.length > 0) { %>
          <% error.forEach(function(msg) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <p><%= msg %></p>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }); %>
        <% } %>

        <form id="sustainabilityForm" enctype="multipart/form-data">
            <!-- Product Selection -->
            <div class="form-section">
                <h2>Product Information</h2>
                <div class="form-group">
                    <label for="productID">Select Product</label>
                    <select name="productID" id="productID" required>
                        <option value="">-- Select Product --</option>
                        <% products.forEach(product => { %>
                            <option value="<%= product._id %>"><%= product.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>

            <!-- Sustainability Metrics -->
            <div class="form-section">
                <h2>Sustainability Metrics</h2>
                
                <div class="form-group">
                    <label>Is Product Made of Recycled Material?</label>
                    <select name="isRecycled" id="isRecycled" required>
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>

                <div class="form-group" id="recycledPercentGroup">
                    <label for="recycledPercent">Recycled Percentage</label>
                    <input type="number" name="recycledPercent" id="recycledPercent" min="1" max="100" disabled>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Is Product Biodegradable?</label>
                        <select name="isBiodegradable" required>
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Is Product Reusable?</label>
                        <select name="isReusable" required>
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Is Product Locally Sourced?</label>
                        <select name="isLocal" required>
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Is Product Handmade?</label>
                        <select name="isHandmade" required>
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="energyUsed">Energy Used (kWh)</label>
                        <input type="number" name="energyUsed" step="0.01" required>
                    </div>

                    <div class="form-group">
                        <label for="waterUsed">Water Used (Liters)</label>
                        <input type="number" name="waterUsed" step="0.01" required>
                    </div>
                </div>
            </div>

            <!-- Certifications -->
            <div class="form-section">
                <h2>Certifications</h2>
                <div class="form-group">
                    <label for="certifications">Upload Certifications (PDF only, max 5)</label>
                    <div class="file-upload-container">
                        <input type="file" name="certifications" id="certifications" multiple accept="application/pdf" >
                        <label for="certifications" class="file-upload-label">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <span>Choose Files</span>
                        </label>
                        <div id="fileList" class="file-list"></div>
                    </div>
                </div>
            </div>

            <!-- Comments -->
            <div class="form-section">
                <div class="form-group">
                    <label for="comments">Additional Comments</label>
                    <textarea name="comments" id="comments" rows="3"></textarea>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="fas fa-paper-plane"></i> Submit Form
                </button>
            </div>
        </form>
    </div>

    <script src="/js/form.js"></script>
</body>
</html>