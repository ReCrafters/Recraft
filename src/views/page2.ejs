<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin | Review Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background-color: #ccb39e;
        }

        .page-wrapper {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            border: 3px solid #281a01;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }


        .form-wrapper {
            border: 3px solid #ccc;
            padding: 25px;
            border-radius: 8px;
            background-color: #ffffff;
            margin-top: 30px;
        }

        .badge {
            font-size: 0.75rem;
            padding: 5px 10px;
            border-radius: 20px;
        }

        .form-label {
            font-weight: 500;
        }

        .btn {
            font-size: 0.9rem;
            border-radius: 4px;
            background-color: rgb(50, 31, 1);
            color: #ffffff;
        }

        .btn-outline-secondary {
            color: #333;
            border-color: #ccc;
        }

        .btn-outline-secondary:hover {
            background-color: #ccc;
            color: #000;
        }

        .table-bordered {
            border: 1.5px solid #444;
            border-radius: 8px;
            overflow: hidden;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table-bordered th,
        .table-bordered td {
            border: 1.5px solid #48310f;
        }
    </style>
</head>

<body>

    <div class="page-wrapper">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 text-dark">Review Sustainability Form</h4>
            <a href="formsList.ejs" class="btn btn-light btn-sm border">‚Üê Back</a>
        </div>

        <!-- Basic Info -->
        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>Seller:</strong> EcoCart Pvt. Ltd.</p>
                <p><strong>State:</strong> Karnataka</p>
                <p><strong>Submitted:</strong> 28-Jun-2025</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p><strong>Status:</strong> <span class="badge bg-warning text-dark">Pending</span></p>
            </div>
        </div>

        <!-- Sustainability Table -->
        <h6 class="pb-2 mb-3 text-dark">Sustainability Information</h6>
        <table class="table table-sm table-bordered mb-4">
            <tbody>
                <tr>
                    <th width="30%">Energy Source</th>
                    <td>Solar & Wind</td>
                </tr>
                <tr>
                    <th>Waste Management</th>
                    <td>Recycled Materials, Composting</td>
                </tr>
                <tr>
                    <th>Certifications</th>
                    <td>ISO 14001, B Corp</td>
                </tr>
            </tbody>
        </table>


        <!-- Form with Border -->
        <div class="form-wrapper">
            <form>
                <div class="mb-3">
                    <label class="form-label">Admin Remarks</label>
                    <textarea class="form-control" rows="4" placeholder="Enter admin remarks..."></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label">Set Status</label>
                    <select class="form-select">
                        <option selected disabled>Select...</option>
                        <option value="Approved">Approve</option>
                        <option value="Rejected">Reject</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn">Submit Review</button>
                    <a href="formsList.ejs" class="btn y ms-2">Cancel</a>
                </div>
            </form>
        </div>

    </div> <!-- End of page-wrapper -->

</body>

</html>